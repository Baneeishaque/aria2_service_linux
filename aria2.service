[Unit]
Description=Aria2c download manager
Requires=network.target
After=dhcpcd.service

[Service]
Type=forking
User=root
ExecStart=/usr/bin/aria2c --conf-path=/var/www/html/aria2_repository/aria2.conf
WorkingDirectory=/var/www/html/aria2_repository/tasks
ExecStop=/bin/kill -s STOP $MAINPID
ExecReload=/usr/bin/kill -HUP $MAINPID
RestartSec=1min
Restart=on-failure

[Install]
WantedBy=multi-user.target